pipeline {
    agent any
    environment {
        DOTNET_CLI_TELEMETRY_OPTOUT = '1'
        DOTNET_NOLOGO = '1'
        DOCKER_REPO = 'fiflakToJa/shoe-grab:user'
        DOCKER_REGISTRY_CREDENTIALS = 'DOCKER_HUB_CREDENTIALS'
		DOTNET_CLI_HOME = '/.dotnet'
    }
    stages {
        stage('Restore and Build') {
            steps {
                sh 'dotnet restore'
                sh 'dotnet build --configuration Release'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_REPO .'
            }
        }
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: "$DOCKER_REGISTRY_CREDENTIALS",
                                                  usernameVariable: 'DOCKER_USERNAME',
                                                  passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh '''
                    docker login -u "$DOCKER_USERNAME" -p "$DOCKER_PASSWORD"
                    docker push $DOCKER_REPO
                    docker logout
                    '''
                }
            }
        }
    }
}
